generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          String    @default("client") // "client" | "business" | "admin"
  accounts      Account[]
  sessions      Session[]
  
  // Your app-specific relations
  clientProfile    ClientProfile?
  businessProfile  BusinessProfile?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Your app models
model ClientProfile {
  id                    String @id @default(cuid())
  userId                String @unique
  phone                 String?
  totalAppointments     Int    @default(0)
  completedAppointments Int    @default(0)
  noShowCount           Int    @default(0)
  cancelCount           Int    @default(0)
  noShowRate            Float  @default(0) // Percentage
  cancelRate            Float  @default(0) // Percentage
  lastAppointmentAt     DateTime?
  riskProfile           String @default("new") // "new" | "reliable" | "at_risk" | "high_risk"
  user                  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments          Appointment[]
  waitlistEntries       Waitlist[]
}

model BusinessProfile {
  id                        String @id @default(cuid())
  userId                    String @unique
  businessName              String
  businessType              String // "salon" | "spa" | "wellness" etc
  phone                     String
  noShowThreshold           Int    @default(20) // % no-show rate to flag as high-risk
  requireDepositForHighRisk Boolean @default(false)
  settings                  Json?  // Store business preferences
  user                      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments              Appointment[]
  services                  Service[]
  waitlistEntries           Waitlist[]
}

model Service {
  id              String @id @default(cuid())
  businessId      String
  name            String // "Haircut", "Manicure", "Facial", etc
  durationMins    Int
  basePrice       Float
  noShowRiskMult  Float  @default(1.0) // Service-specific risk multiplier
  business        BusinessProfile @relation(fields: [businessId], references: [id], onDelete: Cascade)
  appointments    Appointment[]
  
  @@unique([businessId, name])
}

model Appointment {
  id                String    @id @default(cuid())
  businessId        String
  clientId          String
  serviceId         String
  datetime          DateTime
  durationMins      Int
  price             Float
  status            String    @default("confirmed") // confirmed|cancelled|no_show|completed|floated
  bookingWindowDays Int       // How many days in advance was this booked
  appointmentHour   Int       // Hour of day (0-23) for time-of-day patterns
  isReturningClient Boolean   @default(false)
  
  // Prediction & confirmation
  aiRiskScore       Int       @default(0) // 0-100 risk score
  riskLevel         String    @default("LOW") // LOW|MEDIUM|HIGH
  pollSentAt        DateTime?
  pollResponse      String? // "confirmed" | "cancelled" | "no_response"
  
  createdAt         DateTime  @default(now())
  
  business          BusinessProfile @relation(fields: [businessId], references: [id])
  client            ClientProfile   @relation(fields: [clientId], references: [id])
  service           Service         @relation(fields: [serviceId], references: [id])
  lastMinuteSlot    LastMinuteSlot?
}

model LastMinuteSlot {
  id              String      @id @default(cuid())
  appointmentId   String      @unique
  discountedPrice Float
  expiresAt       DateTime
  claimedBy       String?
  createdAt       DateTime    @default(now())
  
  appointment     Appointment @relation(fields: [appointmentId], references: [id])
}

model Waitlist {
  id               String   @id @default(cuid())
  clientId         String
  businessId       String
  preferredServices String[]
  maxPrice         Float?
  flexibleTimes    Json?    // Store time preferences
  createdAt        DateTime @default(now())
  
  client           ClientProfile   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  business         BusinessProfile @relation(fields: [businessId], references: [id], onDelete: Cascade)
}